<%= error_messages_for :invitation%>
<% form_for(@invitation, :url=>{:controller=>"message", :action=>"send_invitation"}, :html=>{:id=>"inv_new_form"}) do |f|%>
<%= hidden_field_tag "project_id", @project.id%>
<fieldset>
	<legend>Invitation</legend>
	<table>
		<tr>
			<td><%= f.label "recipient_email", "Email"%></td>
			<td><%= f.text_field "recipient_email", :size=>55%></td>
		</tr>
		<tr>
			<td valign="top"><%= f.label "message", "Message"%><br/>(Optional)</td>
			<td><%= f.text_area "message", {:rows=>5, :cols=>50}%></td>
		</tr>
		<tr>
			<td colspan="2" align="right" style="border-top:1px dotted #d3d7cf;"><%= button_to_close_lightbox "Invite", {:onclick=>"$('inv_new_form').request();", :class=>"ui_small_button right_margined_5"} %> <%=button_to_close_lightbox "Cancel", {:class=>"ui_small_button"}%></td>
		</tr>
	</table>
</fieldset>
<% end %>