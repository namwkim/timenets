<% form_tag ({:action=>"send_message"}, {:id=>"msg_new_form"}) do -%>
<%= hidden_field_tag "to_id", @to_id %>
<fieldset>
	<legend>New Message</legend>
	<table>
		<tr>
			<td><%= label_tag "subject"%></td>
			<td><%= text_field_tag "subject", "", {:size=>55}%></td>
		</tr>
		<tr>
			<td valign="top"><%= label_tag "body", "Message"%></td>
			<td><%= text_area_tag "body", "", {:rows=>5, :cols=>50}%></td>
		</tr>
		<tr>
			<td colspan="2" align="right" style="border-top:1px dotted #d3d7cf;"><%= button_to_close_lightbox "Send", {:onclick=>"$('msg_new_form').request();", :class=>"ui_small_button right_margined_5"} %> <%=button_to_close_lightbox "Cancel", {:class=>"ui_small_button"}%></td>
		</tr>
	</table>
</fieldset>
<% end %>