<% if person.events.length != 0 %>
<table>
	<% (person.events.sort!{ |a,b| a.from <=> b.from}).each do |event|%>
		<tr id="<%="event_"+event.id.to_s%>">
			<td width="80px">
				<% if event.is_range %>
					<%= event.start%> - <%=event.end%>
				<% else %>
					<%= event.start%>
				<% end %>
			</td>
			<td width="200px"><%= link_to event.name, :controller=>"event", :action=>"show_event", :id=>event.id %></td>
			<td width="80px"><%= event.location%></td>
		</tr>
	<% end %>
</table>
<% else %>
No events found.
<% end %>