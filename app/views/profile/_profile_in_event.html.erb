<tr width="100%" id="<%="profile_"+profile.id.to_s%>">
	<td width="20%"><%=profile.name%></td>
	<td width="10%"><%=profile.sex%></td>
	<td width="20%"><%=profile.date_of_birth%></td>
	<td width="30%"> 
		<span style="padding-right:20px;"><%= link_to_remote_lightbox "Edit", {:url=>{:controller=>"profile", :action=>"edit_profile_in_event", :id=>profile.id}} %></span>
	 	<%=link_to_remote("Remove Link", :url=>{:action=>"delete_profile_in_event", :id=>profile.id}, :with=>(event!=nil ? "'event_id='+#{event.id}" : nil),:confirm=>"do you really want to delete this link", :complete=>"$('profile_#{profile.id}').remove();")%>								
	</td>
</tr>