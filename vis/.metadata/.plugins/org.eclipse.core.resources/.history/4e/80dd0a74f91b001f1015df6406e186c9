<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" backgroundColor="#2e3436" fontSize="12px">
	<mx:Script>
		<![CDATA[
				import org.akinu.events.RootChangeEvent;
				import org.akinu.model.ModelLocator;		
				private var modelLocator:ModelLocator = ModelLocator.getInstance();
				private function rootChange(e:MouseEvent):void{
					var rootChangeEvent:RootChangeEvent = new RootChangeEvent(1);
					rootChangeEvent.dispatch();
					trace("event dispatched");
				}
		]]>
	</mx:Script>
	<mx:Label text="This is where default actions are located!"/>
	<mx:Button id="changeRoot" label="Make it Root" click="rootChange(event)"/>
</mx:Canvas>
