package org.akinu.events
{
	import com.adobe.cairngorm.control.CairngormEvent;
	
	import genvis.data.Person;

	public class SelectionEvent extends CairngormEvent
	{
		public static const SELECTION :String = "Selection";
		public var selected:Person;
		public function SelectionEvent(selected:Person)
		{
			super(SELECTION);
			this.selected = selected;
		}
		override public function clone():Event{
			return new SelectionEvent(selected);
		}
	}
}